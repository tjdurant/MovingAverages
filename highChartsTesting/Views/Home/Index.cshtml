@section scripts{
    @*you have to import the highcharts libraries; later you can download the libraries and just reference min.js
        files in the content directory; ~/Content/library/plugins...etc*@

    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script src="http://code.highcharts.com/modules/exporting.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/javascript/highcharts/linegraph.js")"></script>
}

@{
    ViewBag.Title = "Home Page";
}

@*@string.Join(Averages, ",")*@

<h2>HighCharts Testing</h2>

<div id="container" style="width:100%; height:400px;"></div>

<script type="text/javascript">

    //var dataArray = new JavaScriptSerializer().Serialize(energyArray);
    //var series = [{
